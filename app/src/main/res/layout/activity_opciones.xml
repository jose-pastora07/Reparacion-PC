<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.myaplicacion.hp.repair_pc.Opciones"
    android:background="@drawable/image3">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GENERAR CONSULTA"
        android:id="@+id/consulta"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="173dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AYUDA"
        android:id="@+id/ayuda"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/consulta"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SALIR"
        android:id="@+id/salir"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/ayuda"
        android:layout_alignStart="@+id/ayuda" />
</RelativeLayout>
